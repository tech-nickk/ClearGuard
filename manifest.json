{
    "manifest_version": 3,
    "name": "ClearGuard",
    "version": "1.0",
    "description": "Alerts you about potential sensitive data collection on webpages.",
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },

    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": ["scripting", "activeTab", "storage"]
  }